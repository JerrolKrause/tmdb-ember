<div class="container">
   <div class="row">
      <div class="col-md-12">
         <h1>Showing Results for "{{model.searchTerm}}"</h1>
      </div>
   </div>
</div>

<!-- Movies output-->
<div class="row">
   {{#each model.movies.results as |movie|}}
   <div class="col-xs-12 col-sm-4 col-md-3 col-lg-3">
      <div class="ms-content-tile thumbnail">
         <div class="img">
            <div class="info">
               <p><strong>Release Date:</strong><br/>
                  {{movie.release_date}}
               </p>
               <p><strong>User Rating:</strong><br/>
                  {{movie.vote_average}}
               </p>
            </div>
            {{#if movie.poster_path}}
            <img src="http://image.tmdb.org/t/p/w154{{movie.poster_path}}" alt="{{movie.original_title}}"/>
            {{/if}}
         </div>
         <h2><a href="https://www.themoviedb.org/movie/{{movie.id}}" title="{{movie.original_title}}">{{movie.original_title}}</a></h2>
      </div>
   </div>
   {{/each}}   
</div>
